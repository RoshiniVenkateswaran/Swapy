rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Items collection
    match /items/{itemId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
    }
    
    // Trades collection
    match /trades/{tradeId} {
      allow read: if request.auth != null && request.auth.uid in resource.data.usersInvolved;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid in resource.data.usersInvolved;
    }
    
    // Stats collection (read-only for users)
    match /stats/{category} {
      allow read: if request.auth != null;
      allow write: if false; // Only backend can write
    }
    
    // OTP collection (accessible via API routes for signup)
    match /otps/{email} {
      // Allow unauthenticated operations for signup flow (users aren't logged in yet)
      // API routes validate email format and .edu domain before creating
      // Security: Only allow valid OTP documents with proper structure
      allow create: if request.resource.data.email is string && 
                       request.resource.data.otp is string &&
                       request.resource.data.expiresAt is timestamp;
      
      // Allow read for OTP verification (anyone can read their OTP)
      allow read: if true;
      
      // Allow update for incrementing attempts and other OTP operations
      allow update: if true;
      
      // Allow delete after successful verification
      allow delete: if true;
    }
  }
}

